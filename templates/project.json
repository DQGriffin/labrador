{
    "name": "labrador",
    "environment": "dev",
    "variables": {
        "function_config_dir": "./templates",
        "version": "1.0",
        "build_dir": "./build"
    },
    "stages": [
        {
            "name": "Auth Lambdas-{{version}}",
            "type": "lambda",
            "enabled": true,
            "onConflict": "update",
            "onError": "stop",
            "config": "{{function_config_dir}}/functions.json",
            "environments": ["staging", "prod"],
            "hooks": {
                "pre": "npm run package",
                "post": "npm run clean"
            }
        },
        {
            "name": "Cache Buckets",
            "type": "s3",
            "enabled": true,
            "config": "./buckets.json",
            "dependsOn": ["Auth Lambdas"],
            "onConflict": "update",
            "onError": "stop",
            "environments": ["staging", "prod"]
        }
    ]
}